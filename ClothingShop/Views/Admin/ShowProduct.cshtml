@model AdminViewModel
@{
    Layout = "_AdminLayout";
  
}



            <div class="u-s-p-b-60">   
                <div class="section__content">
                    <div class="dash">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-3 col-md-12">

                                  
                                    <div class="dash__box dash__box--bg-white dash__box--shadow u-s-m-b-30" style="text-align:end;">
                                        <div class="dash__pad-1">

                                            <span class="dash__text u-s-m-b-16">سلام ادمین</span>
                                            <ul class="dash__f-list">
                                                <li>

                                                    <a class="dash-active" href="~/admin/ShowProduct" >دیدن محصولات</a></li>
                                                <li>

                                                    <a href="~/admin/AddProduct">افزودن محصول جدید</a></li>
                                                <li>

                                                    <a  href="~/admin/ShowOrder"> دیدن سفارشات </a></li>
                                                <li>

                                                    <a href="~/admin/medias"> تصاویر </a></li>
                                                <li>

                                                    <a href="~/admin/categorys">دسته بندی ها </a></li>
                                                <li>

                                                    <a href="~/admin/ShowUsers"> مشاهده مشتریان </a></li>
                                             
                                            </ul>
                                        </div>
                                    </div>
                                 </div>

                              <div class="col-lg-9 col-md-12">
                                    <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white" >
                                        <div class="dash__pad-2">
                                              <div class="shop-p__collection" ">
                                                  
                                    <div class="row is-grid-active" >
                                              @foreach (var item in Model.Product)
				                      {
                                          
                                        <div class="col-lg-4 col-md-6 col-sm-6" >
                                            <div class="product-m">
                                                <div class="product-m__thumb">

                                                    <a class="aspect aspect--bg-grey aspect--square u-d-block" href="product-detail.html">

                                                        <img class="aspect__img" src="@item.Medias[0].Path" alt=""></a>
                                                   
                                                </div>
                                                <div class="product-m__content">
                                               
                                                    <div class="product-m__name" style="text-align:end;">

                                                        <a href="product-detail.html">@item.Name</a></div>
                                                    <div class="product-m__rating gl-rating-style" style="text-align:end;"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                                    
                                                        <span class="product-m__review">(23)</span></div>
                                                    <div class="product-m__price" style="text-align:end;">@item.Price تومان</div>
                                                    <div class="product-m__hover">
                                                        <div class="product-m__preview-description" style="text-align:end;">

                                                            <span>@item.Description</span></div>
                                                      
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="blog-t-w">

                                           @* <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-masonry.html"></a>*@
                                            <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-masonry.html">حذف</a>
                                            <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-masonry.html">ویرایش</a>

                                           </div>
                                   
                                        </div>
                    
                      
                        }
                              </div>
                         
                        </div>

                    </div>
                </div>
               
            </div>





      </div>
                        </div>
                        </div>
                        </div></div>
       





