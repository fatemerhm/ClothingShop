@using ClothingShop.Core.Domain
@model List<Product>
@{
    ViewData["Title"] = "Default";
}

 <!--====== Section 6 ======-->
            <div class="u-s-p-y-60" dir="rtl">

                <!--====== Section Intro ======-->
                <div class="section__intro u-s-m-b-46">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section__text-wrap">
                                    <h1 class="section__heading u-c-secondary u-s-m-b-12">ارزان ترین ها</h1>

                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Intro ======-->


                <!--====== Section Content ======-->
                <div class="section__content">
                    <div class="container">
                        <div class="row">

                             @foreach (var item in Model)
                {
                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 u-s-m-b-30">
                                <div class="product-o product-o--hover-on u-h-100">
                                    <div class="product-o__wrap">

                                        <a class="aspect aspect--bg-grey aspect--square u-d-block" href="~/home/singelproduct/@item.ProductId">

                                            <img class="aspect__img" src="@item.Medias[0].Path" alt=""></a>
                                        <div class="product-o__action-wrap">
                                            <ul class="product-o__action-list">
                                                <li>

                                                    <a data-modal="modal" data-modal-id="#quick-look" data-tooltip="tooltip" data-placement="top" href="~/home/QuickLook/@item.ProductId" title="مشاهده سریع"><i class="fas fa-search-plus"></i></a></li>
                                                <li>

                                                    <a data-modal="modal" data-modal-id="#add-to-cart" data-tooltip="tooltip" data-placement="top" title="افزودن به سبد خرید"><i class="fas fa-plus-circle"></i></a></li>
                                                <li>

                                                    <a href="signin.html" data-tooltip="tooltip" data-placement="top" title="افزودن به علاقه مندی ها"><i class="fas fa-heart"></i></a></li>
                              
                                            </ul>
                                        </div>
                                    </div>

                                    <span class="product-o__category">

                                       @* <a href="shop-side-version-2.html">Electronics</a>*@</span>

                                    <span class="product-o__name">

                                        <a href="~/home/singelproduct/@item.ProductId">@item.Name</a></span>
                                    <div class="product-o__rating gl-rating-style"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>

                                      @*  <span class="product-o__review">(23)</span>*@</div>

                                    <span class="product-o__price">@item.Price تومان

                                        @*<span class="product-o__discount">$160.00</span>*@</span>
                                </div>
                            </div>
                          }
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>
            <!--====== End - Section 6 ======-->


           

