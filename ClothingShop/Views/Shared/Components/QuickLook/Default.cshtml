@using ClothingShop.Core.Domain
@model Product
@{
    ViewData["Title"] = "Default";
}

 
        <div class="modal fade" id="quick-look" dir="rtl">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content modal--shadow">

                    <button class="btn dismiss-button fas fa-times" type="button" data-dismiss="modal"></button>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-5">

                            
                              
                                <div class="pd u-s-m-b-30" >
                                    <div class="pd-wrap">
                                        <div id="js-product-detail-modal">
                                             @foreach (var item in Model.Medias)
                    {
                                            <div>

                                                <img class="u-img-fluid" src="@item.Path" alt="">
                                            </div>
                    }
                                           
                                        </div>
                                    </div>
                                    <div class="u-s-m-t-15">
                                        <div id="js-product-detail-modal-thumbnail">
                                               @foreach (var item in Model.Medias)
                    {
                                            <div>

                                                <img class="u-img-fluid" src="@item.Path" alt="">
                                            </div>
                    }   
                                        </div>
                                    </div>
                                </div>
                                <!--====== End - Product Detail ======-->
                            </div>
                            <div class="col-lg-7">

                              
                                <div class="pd-detail">
                                    <div>

                                        <span class="pd-detail__name">@Model.Name</span></div>
                                    <div>
                                        <div class="pd-detail__inline">

                                            <span class="pd-detail__price">@Model.Price</span>

                                          @*  <span class="pd-detail__discount">(76% OFF)</span><del class="pd-detail__del">$28.97</del>*@
                                      </div>
                                    </div>
                                    <div class="u-s-m-b-15">
                                        <div class="pd-detail__rating gl-rating-style"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>

                                            <span class="pd-detail__review u-s-m-l-4">

                                                <a href="product-detail.html"> نظر</a></span></div>
                                    </div>
                                    <div class="u-s-m-b-15">
                                        <div class="pd-detail__inline">

                                            <span class="pd-detail__stock">200 در انبار </span>

                                            <span class="pd-detail__left"> فقط 2 تا مونده </span></div>
                                    </div>
                                    <div class="u-s-m-b-15">

                                        <span class="pd-detail__preview-desc">@Model.Description</span></div>
                                    <div class="u-s-m-b-15">
                                        <div class="pd-detail__inline">

                                            <span class="pd-detail__click-wrap"><i class="far fa-heart u-s-m-r-6"></i>

                                                <a href="signin.html">اضافه به لیست علاقه مندی ها</a>

                                                <span class="pd-detail__click-count"></span></span></div>
                                    </div>
                                    
                                    <div class="u-s-m-b-15">
                                        <ul class="pd-social-list">
                                            <li>

                                                <a class="s-fb--color-hover" href="#"><i class="fab fa-facebook-f"></i></a></li>
                                            <li>

                                                <a class="s-tw--color-hover" href="#"><i class="fab fa-twitter"></i></a></li>
                                            <li>

                                                <a class="s-insta--color-hover" href="#"><i class="fab fa-instagram"></i></a></li>
                                            <li>

                                                <a class="s-wa--color-hover" href="#"><i class="fab fa-whatsapp"></i></a></li>
                                            <li style="margin-right: 3%;">

                                                <a class="s-gplus--color-hover" href="#"><i class="fab fa-google-plus-g"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="u-s-m-b-15">
                                        <form class="pd-detail__form">
                                            <div class="pd-detail-inline-2">
                                                <div class="u-s-m-b-15">

                                                   
                                                    <div class="input-counter">

                                                        <span class="input-counter__minus fas fa-minus"></span>

                                                        <input class="input-counter__text input-counter--text-primary-style" type="text" value="1" data-min="1" data-max="1000">

                                                        <span class="input-counter__plus fas fa-plus"></span></div>
                                                   
                                                </div>
                                                <div class="u-s-m-b-15" style="margin-right: 3%;">

                                                    <button class="btn btn--e-brand-b-2" type="submit">اضافه به سبد خرید </button></div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="u-s-m-b-15">

                                        <span class="pd-detail__label u-s-m-b-8"> ویژگی های خرید:</span>
                                        <ul class="pd-detail__policy-list">
                                            <li><i class="fas fa-check-circle u-s-m-r-8"></i>

                                                <span>خرید مطمئن</span></li>
                                            <li><i class="fas fa-check-circle u-s-m-r-8"></i>

                                                <span>در صورت عدم دریافت سفارش، بازپرداخت کامل وجه</span></li>
                                            <li><i class="fas fa-check-circle u-s-m-r-8"></i>

                                                <span>در صورتی که محصول مطابق توضیحات نباشد، بازگشت پذیرفته می شود</span></li>
                                        </ul>
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

