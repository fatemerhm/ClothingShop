@using ClothingShop.Core.Domain
@model Order
@{
    ViewData["Title"] = "Index";
}

 <!--====== App Content ======-->
        <div class="app-content">

            <!--====== Section 1 ======-->
            <div class="u-s-p-y-60">     
            </div>
            <!--====== End - Section 1 ======-->


            <!--====== Section 2 ======-->
            <div class="u-s-p-b-60">

                <!--====== Section Content ======-->
                <div class="section__content" dir="rtl">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div id="checkout-msg-group">
                                    <div class="msg u-s-m-b-30">

                                        <span class="msg__text">مشتری برگشتی؟

                                            <a class="gl-link" href="#return-customer" data-toggle="collapse">برای ورود اینجا کلیک کنید</a></span>
                                        <div class="collapse" id="return-customer" data-parent="#checkout-msg-group">
                                            <div class="l-f u-s-m-b-16">

                                               
                                                <form class="l-f__form">
                                                    <div class="gl-inline">
                                                        <div class="u-s-m-b-15">

                                                            <label class="gl-label" for="login-email">پست الکترونیک *</label>

                                                            <input class="input-text input-text--primary-style" type="text" id="login-email" placeholder="پست الکترونیک را وارد کنید"></div>
                                                        <div class="u-s-m-b-15">

                                                            <label class="gl-label" for="login-password">گذرواژه *</label>

                                                            <input class="input-text input-text--primary-style" type="text" id="login-password" placeholder="گذرواژه را وارد کنید"></div>
                                                    </div>
                                                    <div class="gl-inline">
                                                        <div class="u-s-m-b-15">

                                                            <button class="btn btn--e-transparent-brand-b-2" type="submit">ورود</button></div>
                                                        <div class="u-s-m-b-15">

                                                            <a class="gl-link" href="lost-password.html">رمز عبور خود را فراموش کرده اید؟</a></div>
                                                    </div>

                                                    <!--====== Check Box ======-->
                                                    <div class="check-box" dir="ltr">

                                                        <input type="checkbox" id="remember-me" >
                                                        <div class="check-box__state check-box__state--primary">

                                                            <label class="check-box__label" for="remember-me">من را به خاطر بسپار</label></div>
                                                    </div>
                                                    <!--====== End - Check Box ======-->
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="msg">

                                        <span class="msg__text">کد تخفیف دارید؟

                                            <a class="gl-link" href="#have-coupon" data-toggle="collapse">برای وارد کردن کد اینجا کلیک کنید</a></span>
                                        <div class="collapse" id="have-coupon" data-parent="#checkout-msg-group">
                                            <div class="c-f u-s-m-b-16">

                                                
                                                <form class="c-f__form">
                                                    <div class="u-s-m-b-16">
                                                        <div class="u-s-m-b-15">

                                                            <label for="coupon"></label>

                                                            <input class="input-text input-text--primary-style" type="text" id="coupon" placeholder="کد تخفیف"></div>
                                                        <div class="u-s-m-b-15">

                                                            <button class="btn btn--e-transparent-brand-b-2" type="submit">ثبت</button></div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>
            <!--====== End - Section 2 ======-->


            <!--====== Section 3 ======-->
            <div class="u-s-p-b-60" dir="rtl">

                <!--====== Section Content ======-->
                <div class="section__content">
                    <div class="container">
                        <div class="checkout-f">
                            <div class="row">
                                <div class="col-lg-6">
                                    <h1 class="checkout-f__h1">اطلاعات تحویل</h1>
                                   <form class="row contact_form" asp-action="index" asp-controller="Checkout" method="post">
                                        <div class="u-s-m-b-30">
                                           

                                            <!--====== First Name, Last Name ======-->
                                            <div class="gl-inline">
                                                <div class="u-s-m-b-15">

                                                    <label class="gl-label" for="billing-fname">نام *</label>

                                                     <input type="text" placeholder="نام" class="input-text input-text--primary-style" id="first" asp-for="Name" /></div>
                                                <div class="u-s-m-b-15">

                                                    <label class="gl-label" for="billing-lname">نام خانوادگی *</label>

                                                    <input type="text" placeholder="نام خانوادگی" class="input-text input-text--primary-style" id="last" asp-for="Surname" /></div>
                                            </div>
                                            <!--====== End - First Name, Last Name ======-->


                                            <!--====== E-MAIL ======-->
                                           @* <div class="u-s-m-b-15">

                                                <label class="gl-label" for="billing-email">پست الکترونیک *</label>

                                              </div>*@
                                            <!--====== End - E-MAIL ======-->


                                            <!--====== PHONE ======-->
                                            <div class="u-s-m-b-15">

                                                <label class="gl-label" for="billing-phone">تلفن *</label>

                                               <input type="text" placeholder="شماره تلفن" class="input-text input-text--primary-style" id="number" asp-for="Phone" /></div>
                                            <!--====== End - PHONE ======-->




                                              <!--====== Country ======-->
                                              <div class="u-s-m-b-15">

                                                <!--====== Select Box ======-->

                                                <label class="gl-label" for="billing-country">استان *</label><select class="select-box select-box--primary-style" id="billing-country" data-bill="">
                                                    <option selected value="">یک استان انتخاب کنید</option>
                                                    <option value="uae">تهران</option>
                                                    <option value="uk">شیراز</option>
                                                    <option value="us">اصفهان</option>
                                                    <option value="khz">خوزستان</option>
                                                </select>
                                                <!--====== End - Select Box ======-->
                                            </div>
                                            <!--====== End - Country ======-->

                                             <!--====== Town / City ======-->
                                             <div class="u-s-m-b-15">

                                                <label class="gl-label" for="billing-town-city">آدرس *</label>

                                                 <input type="text" class="input-text input-text--primary-style" placeholder="آدرس" id="add1" asp-for="Address" /></div>
                                                 
                                            <!--====== End - Town / City ======-->

                                            <!--====== Street Address ======-->
                                            <div class="u-s-m-b-15">

                                                <label class="gl-label" for="billing-street">کدپستی *</label>

                                                 <input type="text" class="input-text input-text--primary-style" id="zip" asp-for="ZipCode" placeholder="کدپستی" /></div>
                                            <div class="u-s-m-b-15">

                                                <label for="billing-street-optional"></label>

                                            </div>
                                            <!--====== End - Street Address ======-->


                                          
                                          
                                          <!--  <div class="u-s-m-b-10">

                                             
                                                   
                                                <div class="check-box">

                                                    <input type="checkbox" id="make-default-address" data-bill="">
                                                    <div class="check-box__state check-box__state--primary">

                                                        <label class="check-box__label" for="make-default-address">Make default shipping and billing address</label></div>
                                                </div>
                                            
                                            </div> -->
                                           
                                            <div class="u-s-m-b-10">

                                                <label class="gl-label" for="order-note">یادداشت سفارش</label><textarea class="text-area text-area--primary-style" id="order-note"></textarea></div>
                                            <div>

                                                <button class="btn btn--e-transparent-brand-b-2" type="submit">ذخیره</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-lg-6">
                                    <h1 class="checkout-f__h1">خلاصه سفارش</h1>

                                    <!--====== Order Summary ======-->
                                   

                                     @(await Component.InvokeAsync("CartCheckout"))    
                                        
                                       
                                        <div class="o-summary__section u-s-m-b-30">
                                            <div class="o-summary__box">
                                                <h1 class="checkout-f__h1">اطلاعات پرداخت</h1>
                                                <form class="checkout-f__payment">
                                                    <div class="u-s-m-b-10">

                                                        <!--====== Radio Box ======-->
                                                        <div class="radio-box">

                                                            <input type="radio" id="cash-on-delivery" name="payment">
                                                            <div class="radio-box__state radio-box__state--primary">

                                                                <label class="radio-box__label" for="cash-on-delivery">پرداخت نقدی هنگام تحویل</label></div>
                                                        </div>
                                                        <!--====== End - Radio Box ======-->

                                                        <span class="gl-text u-s-m-t-6">پرداخت به صورت نقدی هنگام تحویل (این سرویس فقط برای برخی استانها در دسترس است)</span>
                                                    </div>
                                                    <div class="u-s-m-b-10">

                                                        <!--====== Radio Box ======-->
                                                        <div class="radio-box">

                                                            <input type="radio" id="direct-bank-transfer" name="payment">
                                                            <div class="radio-box__state radio-box__state--primary">

                                                                <label class="radio-box__label" for="direct-bank-transfer">انتقال مستقیم بانکی</label></div>
                                                        </div>
                                                        <!--====== End - Radio Box ======-->

                                                        <span class="gl-text u-s-m-t-6">پرداخت خود را مستقیماً به حساب بانکی ما انجام دهید. لطفا از شناسه سفارش خود به عنوان مرجع پرداخت استفاده کنید. سفارش شما تا زمانی که وجوه در حساب ما تسویه نشده باشد ارسال نخواهد شد.</span>
                                                    </div>
                                             
                                                    
                                                    <div>

                                                        <button class="btn btn--e-brand-b-2" type="submit" ><a href="~/Payment/Pay" style="color:white;" >ثبت سفارش</a></button></div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!--====== End - Order Summary ======-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>
            <!--====== End - Section 3 ======-->
        </div>
        <!--====== End - App Content ======-->

