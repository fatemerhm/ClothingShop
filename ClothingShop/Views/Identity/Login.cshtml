@model ClothingShop.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

   <!--====== Section 2 ======-->
            <div class="u-s-p-b-60">

                <!--====== Section Intro ======-->
                <div class="section__intro u-s-m-b-60">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section__text-wrap">
                                    <h1 class="section__heading u-c-secondary">ورود به حساب کاربری</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Intro ======-->
  <!--====== Section Content ======-->
                <div class="section__content">
                    <div class="container">
                        <div class="row row--center">
                            <div class="col-lg-6 col-md-8 u-s-m-b-30">
                                <div class="l-f-o" >
                                    <div class="l-f-o__pad-box" style="text-align:end">
                                        <h1 class="gl-h1">من مشتری جدید هستم</h1>

                                        <span class="gl-text u-s-m-b-30">با ایجاد یک حساب کاربری در فروشگاه ما، می‌توانید مراحل پرداخت را سریع‌تر انجام دهید، آدرس‌های حمل و نقل را ذخیره کنید، سفارش‌های خود را در حساب خود مشاهده و پیگیری کنید و موارد دیگر</span>
                                        <div class="u-s-m-b-15">

                                            <a class="l-f-o__create-link btn--e-transparent-brand-b-2" href="~/Identity/Register">ایجاد یک حساب کاربری</a></div>

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="u-s-m-b-30">
               <label class="gl-label" for="login-email">ایمیل *</label>
                <input asp-for="Email"  class="input-text input-text--primary-style" placeholder="Enter E-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
              <div class="u-s-m-b-30">
               <label class="gl-label" for="login-password">گذرواژه *</label>
                <input asp-for="Password" class="input-text input-text--primary-style" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="gl-inline">
                                                <div class="u-s-m-b-30" style="text-align:start">

                                                    <button class="btn btn--e-transparent-brand-b-2" type="submit">ورود</button></div>
     
     <div class="u-s-m-b-30">

                                                    <a class="gl-link" href="lost-password.html">رمز عبور خود را فراموش کرده اید؟</a></div>
                                            </div>
                                            <div class="u-s-m-b-30">

                                                <!--====== Check Box ======-->
                                                <div class="check-box">

                                                    <input type="checkbox" id="remember-me">
                                                    <div class="check-box__state check-box__state--primary">

                                                        <label class="check-box__label" for="remember-me">مرا به خاطر بسپار</label></div>
                                                </div>
                                                <!--====== End - Check Box ======-->
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>
            <!--====== End - Section 2 ======-->
        </div>
        <!--====== End - App Content ======-->